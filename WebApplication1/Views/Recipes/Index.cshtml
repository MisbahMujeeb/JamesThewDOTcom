@model IEnumerable<WebApplication1.Models.Recipes>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Recipes", FormMethod.Get))
{
    <input value="@ViewBag.searchRecipe" class="form-control pull-right my_search" type="text" placeholder="Search Here..." name="searchRecipe" />
}
<table class="table data_here">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingridiants)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreeOrPaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.User_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingridiants)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            <img style="width:200px" src="@Url.Content(item.ImagePath)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FreeOrPaid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.User_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })|
            @Html.ActionLink("Feedback", "Index", "Recipe_Feedback")
        </td>
    </tr>
}

</table>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $(".my_search").keyup(function () {
            var searchRecipe = $(".my_search").val();
            $(".data_here").empty();
            $.get("/Recipes/API?searchRecipe=" + searchRecipe, function (data) {
                $.each(data, function (index,value) {
                    $(".data_here").append("<tr><td>" + (value.Title) + "</td><td>" + (value.Ingridiants) + "</td><td>" + (value.Details) + "</td><td>"
                        + (value.ImagePath) + "</td><td>" + (value.FreeOrPaid) + "</td><td>" + (value.User_Name) + "</td><tr>")
                })
            })
        })
    })
</script>